<script>
        const audio = document.getElementById('radio-player');
        const playIcon = document.getElementById('play-icon');

function togglePlay() {
    const audio = document.getElementById('radio-player') as HTMLAudioElement;
    const playIcon = document.getElementById('play-icon') as HTMLImageElement;
    
    if (audio && playIcon) {
        if (audio.paused) {
            audio.play()
                .then(() => {
                    playIcon.src = './public/image/pause.png';
                })
                .catch(error => {
                    console.error('Error playing audio:', error);
                });
        } else {
            audio.pause();
            playIcon.src = './public/image/play.png';
        }
    }
}

// Make togglePlay available to window object for onclick handler
(window as any).togglePlay = togglePlay;
    </script>
